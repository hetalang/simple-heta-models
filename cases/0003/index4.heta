/*
    Put s1 and p1 into two different compartments
*/
// index.heta

// compartments
comp1 @Compartment .= 1;
comp2 @Compartment .= 3;

// species
p1 @Species {compartment: comp1} .= 0;
s1 @Species {compartment: comp2, boundary: true} .= 100;

// reactions
r1 @Reaction {actors: s1 => p1} := k1 * s1 * comp2;

// parameters
k1 @Const = 0.1;
